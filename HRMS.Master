                        <asp:Label ID="HRMSDandT" runat="server"></asp:Label>
                            <asp:LinkButton ID="LogoutButton" runat="server" CssClass="btn btn-danger w-75" OnClick="LogoffBtn_Click"><i class="fas fa-sign-out-alt"></i> Sign Out</asp:LinkButton>
                            

                    </div>
                        </div>
                        
                        
                        </header>
                    
